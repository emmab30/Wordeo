{
  "name": "PendingQuestion",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "question": {
        "type": "string",
        "required": true
    },
    "option1": {
        "type": "string",
        "required": true
    },
    "option2": {
        "type": "string",
        "required": true
    },
    "option3": {
        "type": "string",
        "required": true
    },
    "option4": {
        "type": "string",
        "required": true
    },
    "accountId": {
        "type": "number"
    },
    "profitExp": {
        "type": "number",
        "required": false
    },
    "profitTuls": {
        "type": "number",
        "required": false
    },
    "isApproved": {
        "type": "boolean",
        "default": 0
    },
    "createdAt": {
        "type": "date",
        "defaultFn": "now"
    }
  },
  "validations": [],
  "relations": {},
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "addPendingQuestion"
      ]
    }
  ],
  "methods": {
    "addPendingQuestion": {
        "accepts": {
            "arg": "data",
            "type": "object",
            "required": false,
            "http": {
                "source": "body"
            }
        },
        "returns": {
            "root": true,
            "type": "object"
        },
        "http": {
            "verb": "post",
            "path": "/add_pending_question"
        }
    },
    "getMyPendingQuestions": {
        "returns": {
            "root": true,
            "type": "object"
        },
        "http": {
            "verb": "get",
            "path": "/me"
        }
    }
  }
}
